<UserControl x:Class="Groezrock2014.UserControls.UCLoading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="Black">
        <ProgressBar HorizontalAlignment="Left" Height="297" Margin="0,503,0,0" VerticalAlignment="Top" Width="480" IsIndeterminate="True" Foreground="White"/>
        <TextBlock HorizontalAlignment="Center" Style="{StaticResource MainMenuItem}"
			 Height="200" Margin="0,180,0,0" TextWrapping="Wrap"
			 VerticalAlignment="Top" Width="480" TextAlignment="Center">
				Loading <LineBreak /> data
        </TextBlock>
    </Grid>
</UserControl>